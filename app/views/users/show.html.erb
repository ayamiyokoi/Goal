<div class="container">
  <div class="row">
    <div class="col-12">
      <h4>マイページ</h4>
      <% unless @review == nil %>
      <h4><%= @review.created_at.strftime('%Y/%m/%d') %>の振り返り</h4>
    </div>
  </div>
  <div class="row">
    <div class="col-7 colum">
      <div class="row">
        <div class="col-12">
          <h5>ユーザー</h5>
        </div>
      </div>

      <div class="row">
        <div class="col-5">
          <%= attachment_image_tag @user, :profile_image, size: '200x200', format: 'jpeg', fallback: "no_image.jpg", class: "img" %>
        </div>
        <div class="col-7">
          <p>
            名前：<%= @user.name %>
          </p>
          <p>
            現在のステージ：<%= @user.stage %>
          </p>
          <p>
            現在のレベル：<%= @user.level %>
          </p>
          <p>
            メールアドレス：<%= @user.email %>
          </p>
          <p class="introduction">
            自己紹介：
            <% unless @user.introduction == nil %>
              <%= @user.introduction %>
            <% else %>
              未設定
            <% end %>
          </p>
           <%= link_to '編集画面へ', edit_user_registration_path, class: "btn btn-outline-primary" %>
        </div>
      </div>
    </div>


    <div class="col-4 offset-md-1 colum">
      <h5>達成率</h5>
      <%= pie_chart @rate, width: "200px", height: "200px", colors: ["blue",  "#e3f2fd"], legend: false %>
      <p style="font-size:20px;">本日の目標達成率：<strong style="font-size:30px;"><%= @review.rate %>%</strong></p>
    </div>
  </div>
  <div class="row">
    <div class="col-12 colum">
      <h5>本日の振り返り(反省)</h5>
      <p><%= @review.review %></p>
    </div>
  </div>
  <div class="row">
    <div class="col-12 colum">
      <h5>明日の目標</h5>
      <p><%= @review.plan %></p>
    </div>
  </div>
  <div class="row">
    <div class="col-12 colum">
      <h5>本日のトピック: <%= @review.title %></h5>
      <p><%= @review.topic %></p>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <p>コメント数：<%= link_to "#{@review.comments.count} 件", review_path(@review.id) %>
         いいね数：<%= @review.liked_users_count %>
        <%= link_to '詳細画面', @review, class: "btn btn-outline-primary" %>
        <% if @review.written_by?(current_user) %>
        <%= link_to '編集', edit_review_path(@review), class: "btn btn-outline-success" %>
        <%= link_to '削除', @review, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger" %>
        <% end %>
      </p>
    </div>
  </div>

  <div class="row">
    <%= link_to '前の一週間', user_path(current_user.id, week_id: params[:week_id].to_i - 1) %>
    <%= line_chart @data, xmin: @from, xmax: @to %>
    <%= link_to '次の一週間', user_path(current_user.id, week_id: params[:week_id].to_i + 1) %>
  </div>
      <% else %>
    <h4>ユーザー</h4>
      <%= attachment_image_tag @user, :profile_image, size: '200x200', format: 'jpeg', fallback: "no_image.jpg", class: "img" %>
    </div>
    <div class="col-8">
      <div class="field">
        名前<%= @user.name %>
      </div>
      <p>
        現在のステージ：<%= @user.stage %>
      </p>
      <p>
        現在のレベル：<%= @user.level %>
      </p>
      <% if @user == current_user %>
      <div class="field">
        メールアドレス<%= @user.email %>
      </div>
      <%= link_to '編集画面へ', edit_user_registration_path, class: "btn btn-outline-primary" %>
      <% end %>
    </div>
  </div>
      <% end %>
</div>