<div class="container">
  <h4>マイページ</h4>
  <div class="row">
    <div class="col-4">
<h4>プロフィール</h4>
<%= attachment_image_tag @user, :profile_image, size: '100x100', format: 'jpeg' %>

  <div class="field">
   名前
    <%= @user.name %>
  </div>

  <div class="field">
    email
    <%= @user.email %>
  </div>
  <%= link_to '編集画面へ', edit_user_registration_path %>
    </div>
    <div class="col-8">
      <h4><%= @review.created_at.strftime('%Y/%m/%d') %>の振り返り</h4>
      <table>
  <thead>
    <tr>
      <th>ユーザー</th>
      <th>達成率</th>
      <th>本日の振り返り(反省）</th>
      <th>明日の目標</th>
      <th>本日のトピック題名</th>
      <th>本日のトピック</th>
      <th>コメント数</th>
      <th colspan="3"></th>
      <th>いいね数</th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <th><%= attachment_image_tag @review.user, :profile_image, size: '60x60', format: 'jpeg', fallback: "no_image.jpg" %></th>
        <td><%= @review.rate %>%</td>
        <td><%= @review.review %></td>
        <td><%= @review.plan %></td>
        <td><%= @review.title %></td>
        <td><%= @review.topic %></td>
        <td><%= link_to "#{@review.comments.count} 件", review_path(@review.id) %></td>
        <td><%= link_to '詳細画面', @review %></td>
        <% if @review.user_id == current_user.id %>
        <td><%= link_to '編集', edit_review_path(@review) %></td>
        <td><%= link_to '削除', @review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
        <td>(<%= @review.liked_users.count %>)</td>
      </tr>
  </tbody>
</table>
    </div>
  </div>
  <div class="row">
    <canvas id="myChart" width="400" height="400"></canvas>
  </div>


</div>