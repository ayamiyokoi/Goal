 <% if tasks.present? %>
<div class="table">
  <table>
  <thead>
    <tr>

      <th>タスク名</th>
      <th>タスク詳細</th>
      <th>期限</th>
      <th>ステータス</th>
      <th colspan="3"></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% tasks.each do |task| %>
      <tr>

        <td><%= task.name %></td>
        <td><%= task.body %></td>
        <td><%= l(task.date, format: :long) %></td>
        <td><% if task.finished == true %>
              処理済み
              <% else %>
              未処理
              <% end %></td>
        <td><%= link_to '詳細', task, class: "btn btn-outline-primary" %></td>
        <td><%= link_to '編集', edit_task_path(task), class: "btn btn-outline-success" %></td>
        <td><%= link_to '削除', task, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger" %></td>
        <td>
          <% if task.finished == false %>
          <%= link_to '処理済みにする', confirm_task_path(task), class: "btn btn-outline-primary" %>
          <% end %>
        </td>
      </tr>
    <% end %>
     <% else %>
    <p style="padding:20px;color:blue;">データが登録されていません。</p>
    <% end %>
  </tbody>
</table>
</div>