<div class="container">
  <h4>トピック一覧</h4>
  <ul class="nav nav-tabs">
  <li class="nav-item">
    <a href="#topic1" class="nav-link active" data-toggle="tab">マイトピック</a>
  </li>
  <li class="nav-item">
    <a href="#topic2" class="nav-link" data-toggle="tab">すべてのトピック</a>
  </li>
  <li class="nav-item">
    <a href="#topic3" class="nav-link" data-toggle="tab">いいね順</a>
  </li>
  <li class="nav-item">
    <a href="#topic4" class="nav-link" data-toggle="tab">いいねしたトピック</a>
  </li>
</ul>
<div class="tab-content">
  <div id="topic1" class="tab-pane active">
<table>
  <thead>
    <tr>
      <th>ユーザー</th>
      <th>題名</th>
      <th>本日のトピック</th>
      <th>コメント数</th>
      <th colspan="3"></th>
      <th>いいね数</th>
    </tr>
  </thead>

  <tbody>
    <% @reviews_mine.each do |review| %>
      <tr>
        <td><%= attachment_image_tag review.user, :profile_image, size: '60x60', format: 'jpeg', fallback: "no_image.jpg" %></td>
        <td><%= review.title %></td>
        <td><%= review.topic %></td>
        <td><%= link_to "#{review.comments.count} 件", review_path(review.id) %></td>
        <td><%= link_to '詳細画面', review %></td>
        <% if review.user_id == current_user.id %>
        <td><%= link_to '編集', edit_review_path(review) %></td>

        <td><%= link_to '削除', review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
        <td>(<%= review.liked_users.count %>)</td>
      </tr>
    <% end %>
  </tbody>
</table>

