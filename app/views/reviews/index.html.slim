.container
  h4
    | 振り返り一覧
  .row
    .coi-12
      ul.nav.nav-tabs
        li.nav-item
          a.nav-link.active[href="#reviews_mine" data-toggle="tab"]
            | すべての振り返り
        li.nav-item
          a.nav-link[href="#reviews_know" data-toggle="tab"]
            | 知人の振り返り
        li.nav-item
          a.nav-link[href="#reviews_all" data-toggle="tab"]
            | 全ユーザーの振り返り
      .tab-content
        #reviews_mine.tab-pane.active
          = render 'index', reviews: @reviews_mine
        #reviews_know.tab-pane
          = render 'index', reviews: @reviews_know
        #reviews_all.tab-pane
          = render 'index', reviews: @reviews_all
      div
        = link_to '今日の振り返りを作成', new_review_path, class: "btn btn-outline-primary"
