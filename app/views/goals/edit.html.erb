<div class="container">
   <div class="row">
    <h4>目標編集</h4>
    <%= form_with model: @goal do |f| %>
       <div class="field">
    <%= f.label '目標' %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label '期限' %>
    <%= f.date_field :date %>
  </div>
  <div class="field">
    <%= f.radio_button :achieved, :true %>
  <%= f.label :achieved, "達成", {value: :true, style: "display: inline-block;"} %>
  <%= f.radio_button :achieved, :false %>
  <%= f.label :achieved, "未達成", {value: :false, style: "display: inline-block;"} %>
  </div>

  <div class="actions">
    <%= f.submit "更新", class: "btn btn-success" %>
  </div>

    <% end %>
</div>
</div>